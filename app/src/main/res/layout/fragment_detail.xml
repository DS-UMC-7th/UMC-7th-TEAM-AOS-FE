<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackGround_BK">

    <!-- 영화 포스터 -->
    <ImageView
        android:id="@+id/iv_moviePoster"
        android:layout_width="0dp"
        android:layout_height="240dp"
        android:scaleType="centerCrop"
        android:src="@drawable/movie_poster"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 영화 평점 및 정보 -->
    <LinearLayout
        android:id="@+id/ratingAndInfoLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/iv_moviePoster"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_movieTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="파묘"
            android:textSize="28sp"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/ratingLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <RatingBar
                android:id="@+id/rb_movieRating"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="4.5"
                android:stepSize="0.1"
                android:progressTint="@color/Sub_Yellow" />

            <TextView
                android:id="@+id/tv_movieRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_gravity="center_vertical"
                android:text="8.21"
                android:textColor="@color/Sub_Yellow"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tag_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024.02.22"
                android:textColor="@color/C_black"
                android:textSize="13sp"
                android:background="@drawable/tag_background"
                android:paddingHorizontal="10dp"
                android:paddingVertical="3dp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tag_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15세 이상"
                android:textColor="@color/C_black"
                android:textSize="12sp"
                android:background="@drawable/tag_background"
                android:paddingHorizontal="10dp"
                android:paddingVertical="3dp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tag_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="134분"
                android:textColor="@color/C_black"
                android:textSize="12sp"
                android:background="@drawable/tag_background"
                android:paddingHorizontal="10dp"
                android:paddingVertical="3dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 영화 줄거리 -->
    <TextView
        android:id="@+id/tv_movieDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:text="미국 LA, 거액의 의뢰를 받은 무당 ‘화림’(김고은)과 ‘봉길’(이도현)은 기이한 병이 대물림되는 집안의 장손을 만난다. 조상의 묫자리가 화근임을 알아챈 ‘화림’은 이장을 권하고, 돈 냄새를 맡은 최고의 풍수사 ‘상덕’(최민식)과 장의사 ‘영근’(유해진)이 합류한다. “전부 잘 알 거야… 묘 하나 잘못 건들면 어떻게 되는지” 절대 사람이 묻힐 수 없는 악지에 자리한 기이한 묘. ‘상덕’은 불길한 기운을 느끼고 제안을 거절하지만, ‘화림’의 설득으로 결국 파묘가 시작되고… 나와서는 안될 것이 나왔다."
        android:textColor="@color/dark_gray"
        android:textSize="12sp"
        android:lineSpacingExtra="4dp"
        app:layout_constraintTop_toBottomOf="@id/ratingAndInfoLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 감독 및 주연 -->
    <TextView
        android:id="@+id/tv_directorAndCast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:text="감독 | 주연"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tv_movieDescription"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_directorAndCast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_directorAndCast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal" />

    <!-- 좋아요 / 싫어요 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/item_reviews_background"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 좋아요 숫자 -->
        <TextView
            android:id="@+id/tv_likeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="767"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 싫어요 숫자 -->
        <TextView
            android:id="@+id/tv_dislikeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="74"
            android:textColor="@color/C_black"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 좋아요 / 싫어요 비율 -->
        <ProgressBar
            android:id="@+id/likeDislikeProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:progress="80"
            android:progressDrawable="@drawable/progress_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_likeCount"
            app:layout_marginTop="8dp" />

        <!-- 좋아요 버튼 -->
        <Button
            android:id="@+id/btn_like"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="좋아요"
            android:textColor="@color/C_black"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/likeDislikeProgress"
            app:layout_constraintEnd_toStartOf="@id/btn_dislike" />

        <!-- 싫어요 버튼 -->
        <Button
            android:id="@+id/btn_dislike"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:text="싫어요"
            android:textColor="@color/white"
            android:background="@color/C_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/likeDislikeProgress"
            app:layout_constraintStart_toEndOf="@id/btn_like" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>